{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",  
    "typeRoots": ["./src/@types"],                              
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true, 
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,                  
    "skipLibCheck": true                                
  }
}
